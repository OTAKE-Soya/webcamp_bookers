<p>
    <%= flash[:success_destroy] %>
</p>

<h1>Books</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td>
            <p><%= book.title %></p>
        </td>
        <td>
            <p><%= book.body %></p>
        </td>
        <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete %>
        </td>
    </tr>

    <% end %>

</table>

<h4>New book</h4>
<p>
    <%= flash[:create_succes] %>
    <%= flash[:create_error] %>
</p>

<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>